<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    tools:context="com.smartcarassistant.EmergencyTrapped">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btEmergencyOn"
            android:layout_marginTop="95dp"
            android:layout_width="100dp"
            android:layout_marginLeft="120dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="EMERGENY"
            app:srcCompat="@drawable/ic_fire_alarm" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btEmergencyOn"
            android:text="EMERGENCY!!!!!"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:gravity="center"
            android:fontFamily="@font/"
            android:textStyle="bold"
            android:textColor="#ff0000"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="Note: This feature sends an Emergency Message (SMS) to a pre-defined user contact and also redirects the user to Phone dialer and directly calls the Emergency contact."/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="16dp"
        android:text="All this on a Single TAP."/>
</LinearLayout>
