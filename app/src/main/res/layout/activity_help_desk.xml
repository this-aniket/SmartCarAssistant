<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    tools:context="com.smartcarassistant.HelpDeskActivity">

    <TextView
    android:id="@+id/appListTextview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:gravity="center"
    android:text="HelpDesk at your Service"
    android:textColor="#000000"
    android:textSize="25sp"
        android:fontFamily="@font/kids"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="35dp">
            <ImageView
                android:contentDescription="Health Care Service"
                android:id="@+id/buttonHealthCare"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/ic_placeholder"
                android:layout_marginBottom="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonHealthCare"
                android:layout_centerInParent="true"
                android:clickable="false"
                android:gravity="center"
                android:text="Health Care\n Services">
            </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:contentDescription="Sales n' Purchase Service"
                android:id="@+id/buttonSalesPurchase"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/ic_car_1"
                android:layout_marginBottom="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonSalesPurchase"
                android:layout_centerInParent="true"
                android:clickable="false"
                android:gravity="center"
                android:text="Sales n' Purchase">
            </TextView>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="35dp">
            <ImageView
                android:contentDescription="Car Servicing Service"
                android:id="@+id/buttonCarServicing"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/ic_car_2"
                android:layout_marginBottom="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonCarServicing"
                android:layout_centerInParent="true"
                android:clickable="false"
                android:gravity="center"
                android:text="Car Servicing">
            </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:contentDescription="Police Emergency Call"
                android:id="@+id/buttonEmergencyCall"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/ic_police_car"
                android:layout_marginBottom="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonEmergencyCall"
                android:layout_centerInParent="true"
                android:clickable="false"
                android:gravity="center"
                android:text="Call Police">
            </TextView>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>

